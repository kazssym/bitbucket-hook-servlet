<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/ http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="org.vx68k.bitbucket.webhook.example" transaction-type="RESOURCE_LOCAL">
    <non-jta-data-source>jdbc/BitbucketWebhook</non-jta-data-source>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="none"/>
      <property name="eclipselink.ddl-generatio" value="create-or-extend-tables"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <!-- Workaround for WildFly. -->
      <property name="wildfly.jpa.twophasebootstrap" value="false"/>
    </properties>
  </persistence-unit>
</persistence>
